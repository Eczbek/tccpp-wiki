        "eslint-plugin-prettier": "^5.2.6",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "minimatch": "^10.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "sass": "^1.86.3",
        "vite-node": "^3.1.1",
        "vitepress": "^1.6.3",
        "vitest": "^3.1.1"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^6.7.2",
